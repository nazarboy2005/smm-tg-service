# ========================================
# SMM Bot Configuration File
# ========================================
# Copy this file to .env and fill in your values
# cp env.example .env

# ========================================
# REQUIRED: Bot Configuration
# ========================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username_here

# ========================================
# REQUIRED: Database Configuration
# ========================================
# Supabase Transaction Pooler (RECOMMENDED)
# Use this for IPv4 compatibility and no PREPARE statement issues
DATABASE_URL=postgresql://postgres.qgziqlgwaoqyqtcmmjsv:[YOUR-PASSWORD]@aws-1-eu-north-1.pooler.supabase.com:6543/postgres

# Alternative: Direct Connection (IPv6 only, not recommended for most hosting)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.qgziqlgwaoqyqtcmmjsv.supabase.co:5432/postgres

# ========================================
# REQUIRED: Payment Configuration
# ========================================
# Choose one or more payment methods:

# Telegram Payments (MOST RELIABLE - Recommended)
TELEGRAM_PAYMENTS_TOKEN=your_telegram_payments_token_here

# Uzbek Payment Providers
PAYME_MERCHANT_ID=your_payme_merchant_id
CLICK_MERCHANT_ID=your_click_merchant_id

# ========================================
# REQUIRED: Admin Configuration
# ========================================
ADMIN_CONTACT=@your_admin_username

# ========================================
# REQUIRED: Environment
# ========================================
ENVIRONMENT=development  # or production

# ========================================
# OPTIONAL: Webhook Configuration
# ========================================
USE_WEBHOOK=false  # Set to true for production with webhook
WEBHOOK_URL=https://your-domain.com

# ========================================
# OPTIONAL: JAP API Configuration
# ========================================
JAP_API_URL=your_jap_api_url_here
JAP_API_KEY=your_jap_api_key_here

# ========================================
# OPTIONAL: Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# OPTIONAL: Security
# ========================================
SECRET_KEY=your_secret_key_for_jwt_and_encryption_please_change_this
WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# OPTIONAL: Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# ========================================
# OPTIONAL: Web Server
# ========================================
ENABLE_WEB_SERVER=true
WEB_PORT=8000
WEB_HOST=0.0.0.0
WEB_BASE_URL=https://your-domain.com

# ========================================
# OPTIONAL: Application Settings
# ========================================
COINS_PER_USD=10000
WELCOME_BONUS_COINS=100
DEFAULT_REFERRAL_BONUS=10
REFERRAL_TAP_REQUIREMENT=5
MIN_DEPOSIT_USD=1.0
MAX_DEPOSIT_USD=1000.0

# ========================================
# IMPORTANT NOTES:
# ========================================
# 1. Replace [YOUR-PASSWORD] with your actual Supabase database password
# 2. Use Transaction Pooler (port 6543) for IPv4 compatibility
# 3. Transaction Pooler doesn't support PREPARE statements (which is good for us!)
# 4. Set BOT_TOKEN to your actual Telegram bot token from @BotFather
# 5. Set ENVIRONMENT=production when deploying to production